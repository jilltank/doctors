<%= form_for @appointment, remote: true do |f| %>

  <div class="field">
    <%= f.label :doctor_id %><br>
    <%= f.number_field :doctor_id, value: @doctor_id %>
  </div>
  <div class="field">
    <%= f.label :patient_id %><br>
    <%= f.number_field :patient_id, value: @patient_id %>
  </div>
  <div class="field">
    <%= f.label :appt_time %><br>
    <%= f.number_field :appt_time %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-info" %>
  </div>
<% end %>
<br><br>
